@{
    ViewBag.Title = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int idUsuario = 0;
    if (Session["idUsuario"] != null)
    {
        int.TryParse(Session["idUsuario"].ToString(), out idUsuario);
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Compras</title>
</head>
<body>
    <h2>Historial de Compras</h2>

    <div id="historial-compras">

    </div>

    <div id="modal-detalle-venta" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Detalles de la Venta</h3>
            <div id="detalle-venta"></div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {

            $.ajax({
                url: '@Url.Action("ObtenerHistorialCompras", "Tienda")',
                type: 'GET',
                data: { idUsuario: @idUsuario },
                success: function (response) {
                    console.log("Datos recibidos:", response);

                    renderizarHistorialCompras(response);
                },
                error: function(xhr, status, error) {
                    console.error('Error al obtener historial de compras:', error);
                }
            });

            function renderizarHistorialCompras(historial) {
                console.log("Renderizando historial de compras:", historial);
                var $historialCompras = $('#historial-compras');


                var ventasAgrupadas = {};
                historial.forEach(function(venta) {
                    ventasAgrupadas[venta.idVenta] = venta;
                });


                for (var idVenta in ventasAgrupadas) {
                    var venta = ventasAgrupadas[idVenta];
                    var $tarjeta = $('<div>').addClass('tarjeta');
                    $tarjeta.append('<h3>ID de Venta: ' + venta.idVenta + '</h3>');
                    $tarjeta.append('<p>Monto Total: ' + venta.MontoTotal.toFixed(2) + '</p>');

                    var primerProducto = venta.Detalles[0];
                    $tarjeta.append('<p>Producto: ' + primerProducto.Nombre + '</p>');
                    $tarjeta.append('<p>Cantidad: ' + primerProducto.Cantidad + '</p>');
                    $tarjeta.append('<p>Total: ' + primerProducto.Total.toFixed(2) + '</p>');
                    var $img = $('<img>').attr('src', primerProducto.RutaImagen).attr('alt', primerProducto.Nombre);
                    $tarjeta.append($img);


                    var $verMasBtn = $('<button>').addClass('ver-mas-btn').text('Ver más');
                    $verMasBtn.data('venta', venta);
                    $tarjeta.append($verMasBtn);

                    $historialCompras.append($tarjeta);
                }

                $('.ver-mas-btn').click(function() {
                    var venta = $(this).data('venta');
                    mostrarDetallesVenta(venta);
                });
            }

            function mostrarDetallesVenta(venta) {

                $('#detalle-venta').empty();


                var $detalleVenta = $('#detalle-venta');
                $detalleVenta.append('<h4>ID de Venta: ' + venta.idVenta + '</h4>');
                venta.Detalles.forEach(function(detalle) {
                    $detalleVenta.append('<p>Cantidad: ' + detalle.Cantidad + '</p>');
                    $detalleVenta.append('<p>Total: ' + detalle.Total.toFixed(2) + '</p>');
                    var $img = $('<img>').attr('src', detalle.RutaImagen).attr('alt', detalle.Nombre);
                    $detalleVenta.append($img);
                });

                $('#modal-detalle-venta').css('display', 'block');
                $('.close').click(function() {
                    $('#modal-detalle-venta').css('display', 'none');
                });


                $(window).click(function(event) {
                    if (event.target == $('#modal-detalle-venta')[0]) {
                        $('#modal-detalle-venta').css('display', 'none');
                    }
                });
            }
        });
    </script>
</body>
</html>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-top: 50px;
    }

    #historial-compras {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
    }

    .tarjeta {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 10px;
        width: 300px;
        padding: 20px;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
        position: relative;
    }

        .tarjeta:hover {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        .tarjeta img {
            width: 100%;
            height: auto;
            margin-bottom: 15px;
            object-fit: cover; 
        }

        .tarjeta h3 {
            margin: 0;
            color: #333;
            font-size: 18px;
        }

        .tarjeta p {
            margin: 5px 0;
            color: #666;
        }

    .ver-mas-btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
    }


    .modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 10% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 600px;
        border-radius: 10px;
        overflow: auto; 
        text-align: center; 
    }


    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .modal-content img {
        max-width: 50%;
        height: auto;
        margin-bottom: 10px; 
    }

    .product-name {
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
    }
    footer {
        background-color: #505555;
        color: black; 

        bottom: 0;
        width: 100%;
    }
</style>